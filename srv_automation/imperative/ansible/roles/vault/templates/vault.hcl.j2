ui = {{ vault_ui | lower }}

disable_mlock = {{ vault_disable_mlock | lower }}

api_addr     = "{{ vault_api_addr }}"
cluster_addr = "{{ vault_cluster_addr }}"

storage "file" {
  path = "{{ vault_storage_path }}"
}

listener "tcp" {
  address     = "{{ vault_listener_address }}"
  tls_disable = {{ vault_listener_tls_disable | lower }}
}

