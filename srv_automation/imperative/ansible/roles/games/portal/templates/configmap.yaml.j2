apiVersion: v1
kind: ConfigMap
metadata:
  name: {{ portal_name }}-html
  namespace: {{ games_namespace }}
data:
  index.html: |
    <!doctype html>
    <html lang="en">
    <head>
      <meta charset="utf-8" />
      <meta name="viewport" content="width=device-width, initial-scale=1" />
      <title>Games Portal</title>
      <style>
        body {
          margin: 0;
          font-family: system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, sans-serif;
          background: #6a0dad;
          color: white;
        }
        .wrap {
          max-width: 900px;
          margin: 0 auto;
          padding: 48px 20px;
          text-align: center;
        }
        h1 { margin: 0 0 12px; font-size: 40px; }
        p { margin: 0 0 28px; opacity: 0.9; }
        .grid {
          display: grid;
          grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
          gap: 18px;
          margin-top: 24px;
        }
        a.card {
          display: block;
          text-decoration: none;
          color: white;
          background: rgba(255,255,255,0.12);
          border: 1px solid rgba(255,255,255,0.22);
          border-radius: 16px;
          padding: 18px;
          transition: transform 120ms ease, background 120ms ease;
        }
        a.card:hover {
          transform: translateY(-2px);
          background: rgba(255,255,255,0.18);
        }
        .icon {
          width: 72px;
          height: 72px;
          margin: 8px auto 12px;
          border-radius: 16px;
          display: grid;
          place-items: center;
          background: rgba(255,255,255,0.9);
          overflow: hidden;
        }
        .icon img {
          width: 100%;
          height: 100%;
          object-fit: cover;
        }
        .title { font-size: 18px; font-weight: 700; margin: 0; }
        .desc { font-size: 14px; opacity: 0.9; margin: 6px 0 0; }
        .footer { margin-top: 36px; font-size: 12px; opacity: 0.8; }
      </style>
    </head>
    <body>
      <div class="wrap">
        <h1>AT Oyuncakları</h1>
        <p>Pick a game.</p>

        <div class="grid">
{% for game in portal_games %}
          <a class="card" href="{{ game.url }}" target="_blank" rel="noopener">
            <div class="icon"><img src="images/{{ game.icon_image }}" alt="{{ game.name }}"></div>
            <p class="title">{{ game.name }}</p>
            <p class="desc">{{ game.description }}</p>
          </a>
{% endfor %}
        </div>

        <div class="footer">
          Hosted on Kubernetes • NGINX • NodePort
        </div>
      </div>
    </body>
    </html>

---
apiVersion: v1
kind: ConfigMap
metadata:
  name: {{ portal_name }}-images
  namespace: {{ games_namespace }}
binaryData:
{% for game in portal_games %}
  {{ game.icon_image }}: {{ game_images[game.icon_image] }}
{% endfor %}
