[Unit]
Description=Serve Kubernetes join command for srv_automation (HTTP)
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
WorkingDirectory={{ k8s_join_out_dir }}
ExecStart=/usr/bin/python3 -m http.server {{ k8s_join_http_port }} --bind 0.0.0.0
Restart=on-failure
RestartSec=3

[Install]
WantedBy=multi-user.target

